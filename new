public bool TryGetLaserState(out uint laserState)
{
    laserState = 0;

    if (!_connected)
        throw new InvalidOperationException("Sensor not connected. Call Connect() first.");

    int ret = CLLTI.GetFeature(device, CLLTI.FEATURE_FUNCTION_LASERPOWER, ref laserState);
    if (ret < CLLTI.GENERAL_FUNCTION_OK)
    {
        SetError("GetFeature(LASERPOWER)", ret);
        return false;
    }

    return true;
}

public bool SetLaserOn(bool on)
{
    if (!_connected)
        throw new InvalidOperationException("Sensor not connected. Call Connect() first.");

    uint val = on ? 1u : 0u;  // 1 = ON, 0 = OFF for typical LLTs

    int ret = CLLTI.SetFeature(device, CLLTI.FEATURE_FUNCTION_LASERPOWER, val);
    if (ret < CLLTI.GENERAL_FUNCTION_OK)
    {
        SetError("SetFeature(LASERPOWER)", ret);
        return false;
    }

    return true;
}