public void SetMarkerSphere(List<Vector3> pts, float radius = 1f)
{
    var mb = new MeshBuilder(true, false); // <-- normals ON

    foreach (var pt in pts)
        mb.AddSphere(new Vector3(pt.X, pt.Y, pt.Z), radius, 16, 16);

    var geo = mb.ToMeshGeometry3D();
    gMarkerModel.Geometry = geo;

    // Guaranteed red
    gMarkerModel.Material = new PhongMaterial
    {
        DiffuseColor = new Color4(1f, 0f, 0f, 1f),
        AmbientColor = new Color4(0.2f, 0f, 0f, 1f), // helps avoid â€œtoo darkâ€
        SpecularColor = new Color4(0.2f, 0.2f, 0.2f, 1f),
        Shininess = 20f
    };

    gMarkerModel.IsRendering = true;
}